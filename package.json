{
  "name": "@goobits/themes",
  "version": "1.0.1",
  "description": "A reusable theme system for SvelteKit projects with Svelte 5 runes support",
  "type": "module",
  "main": "index.ts",
  "exports": {
    ".": "./index.ts",
    "./core": "./core/index.ts",
    "./svelte": "./svelte/index.ts",
    "./svelte/*": "./svelte/*",
    "./server": "./server/index.ts",
    "./utils": "./utils/index.ts",
    "./themes/default.css": "./themes/default.css",
    "./themes/spells.css": "./themes/spells.css",
    "./package.json": "./package.json"
  },
  "files": [
    "core",
    "svelte",
    "server",
    "themes",
    "utils",
    "index.ts",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0",
    "@sveltejs/kit": "^2.0.0"
  },
  "scripts": {
    "package": "echo 'Package is already in publishable format'",
    "build": "tsc --noEmit",
    "test": "echo 'No tests configured'"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.4",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0",
    "svelte": "^5.43.2"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "themes",
    "theming",
    "dark-mode",
    "color-schemes",
    "svelte-5",
    "runes"
  ],
  "license": "MIT",
  "author": "GooBits",
  "homepage": "https://github.com/goobits/goobits-themes#readme",
  "bugs": {
    "url": "https://github.com/goobits/goobits-themes/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goobits/goobits-themes.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
