{
    "name": "@goobits/themes",
    "version": "1.1.6",
    "description": "A reusable theme system for SvelteKit projects with Svelte 5 runes support",
    "type": "module",
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./core": {
            "types": "./dist/core/index.d.ts",
            "svelte": "./dist/core/index.js",
            "default": "./dist/core/index.js"
        },
        "./core/*": {
            "types": "./dist/core/*.d.ts",
            "svelte": "./dist/core/*",
            "default": "./dist/core/*"
        },
        "./svelte": {
            "types": "./dist/svelte/index.d.ts",
            "svelte": "./dist/svelte/index.js",
            "default": "./dist/svelte/index.js"
        },
        "./svelte/*": {
            "types": "./dist/svelte/*.d.ts",
            "svelte": "./dist/svelte/*",
            "default": "./dist/svelte/*"
        },
        "./server": {
            "types": "./dist/server/index.d.ts",
            "default": "./dist/server/index.js"
        },
        "./server/*": {
            "types": "./dist/server/*.d.ts",
            "default": "./dist/server/*"
        },
        "./utils": {
            "types": "./dist/utils/index.d.ts",
            "default": "./dist/utils/index.js"
        },
        "./utils/*": {
            "types": "./dist/utils/*.d.ts",
            "default": "./dist/utils/*"
        },
        "./themes": "./themes/index.css",
        "./themes/base": "./themes/base/index.css",
        "./themes/base/design-tokens.css": "./themes/base/design-tokens.css",
        "./themes/base/fx-tokens.css": "./themes/base/fx-tokens.css",
        "./themes/base/reset.css": "./themes/base/reset.css",
        "./themes/default.css": "./themes/presets/default.css",
        "./themes/spells.css": "./themes/presets/spells.css",
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*",
        "themes",
        "README.md",
        "LICENSE"
    ],
    "peerDependencies": {
        "@sveltejs/kit": "^2.0.0",
        "svelte": "^5.0.0"
    },
    "scripts": {
        "package": "svelte-package",
        "build": "svelte-package",
        "prepublishOnly": "pnpm run package",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint . --max-warnings 10",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "check": "npm run build && npm run lint && npm run format:check && npm run test"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@sveltejs/kit": "^2.48.4",
        "@sveltejs/package": "^2.5.4",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/svelte": "^5.2.8",
        "@types/node": "^24.10.1",
        "@typescript-eslint/eslint-plugin": "^8.46.4",
        "@typescript-eslint/parser": "^8.46.4",
        "@vitest/coverage-v8": "^4.0.8",
        "@vitest/ui": "^4.0.8",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.13.0",
        "jsdom": "^27.1.0",
        "prettier": "^3.6.2",
        "prettier-plugin-svelte": "^3.4.0",
        "svelte": "^5.43.2",
        "svelte-eslint-parser": "^1.4.0",
        "typescript": "^5.9.3",
        "vite": "^7.2.2",
        "vitest": "^4.0.8"
    },
    "keywords": [
        "svelte",
        "sveltekit",
        "themes",
        "theming",
        "dark-mode",
        "color-schemes",
        "svelte-5",
        "runes"
    ],
    "license": "MIT",
    "author": "GooBits",
    "homepage": "https://github.com/goobits/goobits-themes#readme",
    "bugs": {
        "url": "https://github.com/goobits/goobits-themes/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/goobits/goobits-themes.git"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "overrides": {
        "cookie": "^0.7.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@lucide/svelte": "^0.553.0"
    }
}
